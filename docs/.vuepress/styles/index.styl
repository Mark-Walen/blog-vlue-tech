blockquote
  background-color $blockquoteBgColor
  border-left 0.2rem solid $blockquoteBorderColor
  border-radius 6px
  padding 1rem
  color $blockquoteTextColor
  line-height 1

mark
  background-color $markColor
  padding 0 2px
  margin 0 2px

div[class*="language-"]
  margin 1rem 0
  padding-top 0.5rem

div[class*="language-"]::before
  top 0.5em
  font-size 0.8rem
  color $borderColor

div[class*="language-"]::after
  content " "
  position absolute
  -webkit-border-radius 50%
  border-radius 50%
  background #fc625d
  width 11px
  height 11px
  left 0.8em
  top 0.8em
  -webkit-box-shadow: 20px 0 #fdbc40, 40px 0 #35cd4b
  box-shadow 20px 0 #fdbc40, 40px 0 #35cd4b
  z-index 2

div[class*="language-"] pre
  position unset !important

div[class*="language-"] pre::before
  content ''
  width 100%
  height 2em
  background #18303A
  position absolute
  border-radius 6px 6px 0 0
  //border-bottom 2px solid $borderColor
  top 0
  left 0

::selection
  color #f9f9f9
  background-color #fcc10e